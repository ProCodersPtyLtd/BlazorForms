    public IFormViewModel ViewModel { get; set; }

    [Parameter]
    public FieldControlDetails Table { get; set; }

    [Parameter]
    public string Caption { get; set; }

    [Parameter]
    public IEnumerable<FieldControlDetails> Columns { get; set; }

