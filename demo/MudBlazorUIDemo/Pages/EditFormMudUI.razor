@page "/flow-edit-form/{store:bool}"

@using BlazorForms.Rendering.MudBlazorUI.Components

<PageTitle>Form V2</PageTitle>

<FlowEditForm FlowName="@typeof(BlazorFormsDemoFlows.FluentArtelProjectSettingsFlow).FullName" Pk="0" AllowAnonymousAccess="true" 
    AllowFlowStorage="@Store" NavigationSuccess="/" Options="Options"/>

@code {
    [Parameter]
    public bool Store { get; set; }

    private EditFormOptions Options = new EditFormOptions
        {
            Variant = Variant.Outlined,
            //Virtualize = true,
            DateFormat = "dd/MM/yyyy",
        };
}
